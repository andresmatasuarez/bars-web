{
  "name": "bars-web",
  "private": true,
  "workspaces": [
    "themes/*"
  ],
  "config": {
    "pluginsSrc": "plugins/*/*.{php,js}",
    "pluginsDest": "./wp-plugins"
  },
  "scripts": {
    "dev": "npm-run-all --parallel dev:bars2013 dev:bars2026 dev:plugins",
    "build": "npm-run-all build:bars2013 build:bars2026 build:plugins",
    "dev:bars2013": "npm run dev -w themes/bars2013",
    "build:bars2013": "npm run build -w themes/bars2013",
    "lint:bars2013": "npm run lint -w themes/bars2013",
    "dev:bars2026": "npm run dev -w themes/bars2026",
    "build:bars2026": "npm run build -w themes/bars2026",
    "lint:bars2026": "npm run lint -w themes/bars2026",
    "test:bars2026": "npm run test -w themes/bars2026",
    "clean:plugins": "rimraf \"wp-plugins/bars-commons/*\" \"wp-plugins/jury-post-type/*\" \"wp-plugins/movie-post-type/*\" --glob",
    "copy:plugins": "cpx \"$npm_package_config_pluginsSrc\" $npm_package_config_pluginsDest",
    "watch:plugins": "npm run copy:plugins -- --watch --verbose",
    "build:plugins": "npm-run-all clean:plugins copy:plugins",
    "dev:plugins": "npm-run-all clean:plugins watch:plugins",
    "deploy:plugins": "node --env-file=.env scripts/deploy.mjs plugins",
    "deploy:bars2013": "node --env-file=.env scripts/deploy.mjs bars2013",
    "deploy:bars2026": "node --env-file=.env scripts/deploy.mjs bars2026",
    "deploy:config": "node --env-file=.env scripts/deploy.mjs config",
    "deploy": "node --env-file=.env scripts/deploy.mjs all",
    "og:clear:local": "docker compose exec wordpress rm -rf /var/www/html/wp-content/uploads/og-cache/",
    "og:clear:remote": "node --env-file=.env scripts/clear-og-cache.mjs",
    "download:assets": "node --env-file=.env scripts/download-assets.mjs",
    "test:integration": "node tests/integration/test-redirects.mjs",
    "test": "npm-run-all test:bars2026 test:integration",
    "format": "npx prettier --write \"shared/**/*.{ts,tsx,js,json,css}\" \"themes/**/*.{ts,tsx,js,json,css}\""
  },
  "devDependencies": {
    "basic-ftp": "^5.1.0"
  }
}
