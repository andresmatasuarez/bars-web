{
  "name": "bars2026",
  "version": "1.0.0",
  "private": true,
  "description": "Buenos Aires Rojo Sangre Film Festival - bars2026 theme",
  "config": {
    "dest": "../../wp-themes/bars2026",
    "php": "./php/**/*",
    "sharedPhp": "../../shared/php/**/*",
    "editions": "../../shared/editions.json",
    "resources": "../../shared/resources/**/*"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:autofix": "eslint . --fix",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "clean": "rimraf ../../wp-themes/bars2026/* --glob",
    "dev": "npm-run-all clean --parallel dev:** watch:**",
    "dev:main": "npm run build:main -- --watch",
    "dev:selection": "npm run build:selection -- --watch",
    "build": "npm-run-all clean --parallel build:** copy:**",
    "build:main": "vite build --config vite/vite.config.ts",
    "build:selection": "vite build --config vite/selection.vite.config.ts",
    "copy:php": "cpx \"$npm_package_config_php\" $npm_package_config_dest",
    "copy:shared-php": "cpx \"$npm_package_config_sharedPhp\" $npm_package_config_dest",
    "copy:editions": "cpx \"$npm_package_config_editions\" $npm_package_config_dest",
    "copy:resources": "cpx \"$npm_package_config_resources\" $npm_package_config_dest/resources",
    "watch:php": "npm run copy:php -- --watch --verbose",
    "watch:shared-php": "npm run copy:shared-php -- --watch --verbose",
    "watch:editions": "npm run copy:editions -- --watch --verbose",
    "watch:resources": "npm run copy:resources -- --watch --verbose"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^20.10.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.24",
    "cpx": "^1.3.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "npm-run-all": "^2.3.0",
    "postcss": "^8.5.6",
    "prettier": "^3.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "rimraf": "^5.0.9",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.2.2",
    "vite": "^4.5.0"
  }
}
