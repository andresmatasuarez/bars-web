{
  "name": "bars2013",
  "version": "1.0.0",
  "private": true,
  "description": "Buenos Aires Rojo Sangre Film Festival - bars2013 theme",
  "config": {
    "dest": "../../wp-themes/bars2013",
    "php": "./php/**/*",
    "sharedPhp": "../../shared/php/**/*",
    "editions": "../../shared/editions.json",
    "resources": "../../shared/resources/**/*",
    "vendor": "./vendor/**/*"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:autofix": "eslint . --fix",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "clean": "rimraf ../../wp-themes/bars2013/* --glob",
    "dev": "npm-run-all clean --parallel dev:** watch:**",
    "dev:main": "npm run build:main -- --watch",
    "dev:selection": "npm run build:selection -- --watch",
    "build": "npm-run-all clean --parallel build:** copy:**",
    "build:main": "vite build --config vite/vite.config.ts",
    "build:selection": "vite build --config vite/selection.vite.config.ts",
    "copy:php": "cpx \"$npm_package_config_php\" $npm_package_config_dest",
    "copy:shared-php": "cpx \"$npm_package_config_sharedPhp\" $npm_package_config_dest",
    "copy:editions": "cpx \"$npm_package_config_editions\" $npm_package_config_dest",
    "copy:resources": "cpx \"$npm_package_config_resources\" $npm_package_config_dest/resources",
    "copy:vendor": "cpx \"$npm_package_config_vendor\" $npm_package_config_dest/vendor",
    "watch:php": "npm run copy:php -- --watch --verbose",
    "watch:shared-php": "npm run copy:shared-php -- --watch --verbose",
    "watch:editions": "npm run copy:editions -- --watch --verbose",
    "watch:resources": "npm run copy:resources -- --watch --verbose",
    "watch:vendor": "npm run copy:vendor -- --watch --verbose"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^6.4.2",
    "@fortawesome/fontawesome-svg-core": "^6.4.2",
    "@fortawesome/free-regular-svg-icons": "^6.4.2",
    "@fortawesome/free-solid-svg-icons": "^6.4.2",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@rollup/plugin-inject": "^5.0.5",
    "@types/node": "^20.10.0",
    "@types/react-dom": "^18.2.15",
    "@types/react-modal": "^3.16.3",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@vitejs/plugin-react": "^4.1.1",
    "cpx": "^1.3.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "fancybox": "^3.0.0",
    "fetch-jsonp": "^1.3.0",
    "jquery": "^2.2.3",
    "jquery-focuspoint": "^1.1.3",
    "jquery-form": "^4.3.0",
    "jquery-validation": "^1.15.0",
    "less": "^4.2.0",
    "lodash": "^4.12.0",
    "npm-run-all": "^2.3.0",
    "prettier": "^3.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-modal": "^3.16.1",
    "react-select": "^5.8.0",
    "rimraf": "^5.0.9",
    "styled-components": "^6.1.1",
    "typescript": "^5.2.2",
    "vite": "^4.5.0"
  },
  "overrides": {
    "react-error-overlay": "6.0.9"
  }
}
